{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}
    <section class="vh-99">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 text-black">

                    <div class="card-body p-5 shadow-5 text-center border">

                        <form method="post" style="width: 23rem;">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Log
                                        out</a>
                                </div>
                            {% endif %}

                            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="inputUsername">Username</label>
                                <input type="text" value="{{ last_username }}" name="_username" id="inputUsername"
                                       class="form-control" autocomplete="username" required autofocus>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="inputPassword">Password</label>
                                <input type="password" name="_password" id="inputPassword" class="form-control"
                                       autocomplete="current-password" required>
                            </div>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            <div class="pt-1 mb-4">
                                <button class="btn btn-lg btn-primary" type="submit">Login</button>
                            </div>

                            <p>Don't have an account? <a href="register" class="link-info">Register here</a></p>

                        </form>
                    </div>
                </div>
                <div class="col-sm-6 px-0 d-none d-sm-block">
                    <img src="https://pbs.twimg.com/media/EpD_joLXUAIX9KZ.jpg:large"
                         alt="Login image" class="w-100 vh-100"
                         style="object-fit: cover; object-position: left; max-height: 930px; border-left: 5px ridge black;">
                </div>
            </div>
        </div>

        <style>.vh-100 {ght: 873px;
            }

            .card-body {
                width: 500px;
                margin: 100px 0 0 200px;
            }
        </style>
    </section>
{% endblock main %}