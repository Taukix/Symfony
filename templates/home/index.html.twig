{% extends 'base.html.twig' %}

{% block title %}Home!{% endblock %}

{% block main %}
    <div class="container" style="margin-top: 50px; padding: 0;">
        <div class="row" style="width: 1500px;">
            <div class="col-md-9" style="padding: 0 0 0 0;">
                <h3 class="pb-4 mb-4 fst-italic border-bottom">Newest Posts</h3>
                <div id="article-list">
                    {% include 'article/list.html.twig' with { articles } %}
                </div>
            </div>

            <div class="col-md-2">
                <div class="position-sticky" style="top: 2rem;">
                    {%  include 'widget/categories.html.twig' %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}