{% set username = comment.user.username %}

<div class="comment mb-5" id="comment-{{ comment.id }}">
    <div class="card p-3">
        <div id="card-body">
            <h5 class="card-title">
                <p class="text-decoration-none" style="color: blue; text-align: left; clear: both; margin-top: -10px;">
                    <span class="comment-author" style="float: left; margin-right: 10px;">{{ username }}</span>
                </p>
                {{ comment.createdAt|date('d M Y | g:i:s a') }}
            </h5>

            <p class="card-text">{{ comment.content }}</p>

        </div>
    </div>
</div>