{% extends 'base.html.twig' %}

{% block title %}Contact!{% endblock %}

{% block main %}
    <!-- Section: Design Block -->
    <section class="text-center text-lg-start">
        <style>
            .cascading-right {
                margin-right: -50px;
            }

            @media (max-width: 991.98px) {
                .cascading-right {
                    margin-right: 0;
                }
            }

            .w-100 {
                height: 100%;
            }

            #contact_Envoyer {
                visibility: hidden;
            }

            .form-control {
                margin: 10px 0 30px 0
            }

            .btn {
                margin-top: 30px;
            }
        </style>

        <!-- Jumbotron -->
        <div class="container py-4" style="margin-top: 80px;">
            <div class="row g-0 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card cascading-right" style="
                background: hsla(0, 0%, 100%, 0.55);
                backdrop-filter: blur(30px);
                ">
                        <div class="card-body p-5 shadow-5 text-center">
                            <h2 class="fw-bold mb-5">Contact us !</h2>
                            {{ form_start(ContactForm) }}
                            {{ form_row(ContactForm.email, {'label' : "Email", 'attr': {'class': 'form-control form-control-lg'}}) }}
                            {{ form_row(ContactForm.content, {'label' : 'Message', 'attr': {'class': 'form-control form-control-lg'}}) }}

                            {{ form_end(ContactForm) }}
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <img src="https://i.pinimg.com/736x/ae/e8/63/aee8639798d84691dba71a2e603545ef.jpg"
                         class="w-100 rounded-4 shadow-4"
                         alt=""/>
                </div>
            </div>
        </div>
        <!-- Jumbotron -->
    </section>
    <!-- Section: Design Block -->
{% endblock %}
